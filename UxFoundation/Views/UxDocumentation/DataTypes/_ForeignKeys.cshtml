<h3>UxEditorRowFor</h3>
<div class="example">
    @using (Html.UxBeginForm())
    {
        @Html.UxEditorRowFor(m => m.ForeignKeyValue, @Model.DataSources["ungrouped"])
        @Html.UxEditorRowFor(m => m.ForeignKeyValue2, @Model.DataSources["grouped"])
        @Html.UxSaveButton()
    }
</div>
