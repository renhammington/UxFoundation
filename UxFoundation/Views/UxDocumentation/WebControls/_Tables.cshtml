<div class="section">
    <h3>Parameters</h3>
    @using (var panel = Html.UxPanel(AppearanceType.Default))
    {
        @panel.Header(
    @:UxTable
)
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>striped</td>
                    <td><code>bool</code></td>
                    <td><code>false</code></td>
                    <td>Adds background color to alternating rows.</td>
                </tr>
                <tr>
                    <td>bordered</td>
                    <td><code>bool</code></td>
                    <td><code>false</code></td>
                    <td>Adds a border to the table.</td>
                </tr>
                <tr>
                    <td>condensed</td>
                    <td><code>bool</code></td>
                    <td><code>false</code></td>
                    <td>Condenses the layout of the table.</td>
                </tr>
                <tr>
                    <td>hovered</td>
                    <td><code>bool</code></td>
                    <td><code>false</code></td>
                    <td>Adds highlighting to rows on mouseover.</td>
                </tr>
                <tr>
                    <td>clientId</td>
                    <td><code>string</code></td>
                    <td><code>null</code></td>
                    <td>Sets the <code>id</code> property of the rendered html element.</td>
                </tr>
            </tbody>
        </table>
    }
</div>
