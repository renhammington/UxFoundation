@using Ux.Mvc.Web.UI
<div class="page-header">
    <h1>Tables <small>UxTable</small></h1>
</div>

<div class="section">
    <h3>Helper</h3>
    <div class="highlight highlight-large">
        <pre class="prettyprint">
@@using (Html.Table()) { &hellip; }
</pre>
    </div>
</div>
<div class="section">



    <h3>Appearance</h3>
    <div class="example">
        @using (Html.UxTable())
        {
            @Html.Partial("_TableContent")
        }

    </div>
    <div class="highlight">
        <pre class="prettyprint">
@@using (Html.UxTable())
{
    &hellip;
}
</pre>
    </div>
</div>
<div class="section">
    <h3>Striped</h3>
    <div class="example">
