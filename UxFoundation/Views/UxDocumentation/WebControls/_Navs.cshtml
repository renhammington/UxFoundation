}
</pre>
    </div>
</div>
<div class="section">
    <h3>With Badges</h3>
    <div class="example">
        <div class="clearfix">
            <div class="col-xs-4">
                @using (Html.UxNav(NavType.PillsStacked))
                {
                    @Html.UxNavLink("Home", "#home", IconType.Home, active: true, badgeText: "4", badgePullRight: true)
                    @Html.UxNavLink("Profile", "#profile", IconType.User)
                    @Html.UxNavLink("Messages", "#messages", IconType.Envelope, badgeText: "12", badgePullRight: true)
                    @Html.UxNavLink("Disabled", "#", IconType.BanCircle, disabled: true);
                }
            </div>
