@using Ux.Mvc.Web.UI
<div class="page-header">
    <h1>Navs<small>UxNav + UxNavLink</small></h1>
</div>
<div class="section">
<h3>Helper</h3>
<div class="highlight highlight-large">
    <pre class="prettyprint">
@@using (@@Html.UxNav())
{
	@@Html.UxNavLink()
}
</pre>
</div>
</div>
<div class="section">
