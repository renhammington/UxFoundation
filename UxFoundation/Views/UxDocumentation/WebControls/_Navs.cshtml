            @Html.UxNavLink("Home", "#home", active: true)
            @Html.UxNavLink("Profile", "#profile")
            @Html.UxNavLink("Messages", "#messages", IconType.Envelope, IconPosition.Right)
            @Html.UxNavLink("Disabled", "#", disabled: true);
        }
    </div>
