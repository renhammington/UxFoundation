        <div class="clearfix">
            <div class="col-xs-4">
                @using (Html.UxNav(NavType.PillsStacked))
                {
                    @Html.UxNavLink("Home", "#home", active: true)
                    @Html.UxNavLink("Profile", "#profile")
                    @Html.UxNavLink("Messages", "#messages", IconType.Envelope, IconPosition.Right, iconPullRight: true)
                    @Html.UxNavLink("Disabled", "#", disabled: true);
                }
            </div>
        </div>
    </div>
    <div class="highlight">
        <pre class="prettyprint">
@@using (Html.UxNav(NavType.PillsStacked))
{
	@@Html.UxNavLink("Home", "#home", active: true)
	@@Html.UxNavLink("Profile", "#profile")
