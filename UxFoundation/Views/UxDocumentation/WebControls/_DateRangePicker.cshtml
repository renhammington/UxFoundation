@using Ux.Mvc.Web.UI
<div class="page-header">
    <h1>Date range picker <small>UxDateRangePicker</small></h1>
</div>
<h3>Helper</h3>
<div class="highlight highlight-large">
    <pre class="prettyprint">
@@Html.UxDateRangePickers()
</pre>
</div>

<div class="section">
    <h3>Appearance</h3>
    <div class="example">
        
<div style="width: 350px;">
    <div class="input-group">
        <input type="text" name="reservation" class="form-control daterange" id="daterange" data-showdropdowns="true" data-dateformat="DD/MM/YYYY" data-start="22/09/2013" data-end="15/10/2013" />
        <span class="input-group-addon" style="cursor:pointer;">@Html.UxIcon(IconType.Calendar)</span>
    </div>
</div>
        




    </div>
    <div class="highlight">
        <pre class="prettyprint">
@@Html.UxDateRangePicker()
</pre>
    </div>
</div>
<div class="section">
    <h3>Parameters</h3>
    @using (var panel = Html.UxPanel(AppearanceType.Default))
    {
        @panel.Header(
    @:UxDateRangePicker
)
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>text</td>
                    <td><code>string</code></td>
                    <td><code>null</code></td>
                    <td>The text to display in the badge.</td>
                </tr>
                <tr>
                    <td>pullRight</td>
                    <td><code>bool</code></td>
                    <td><code>false</code></td>
                    <td>If <code>true</code>, pulls the badge to the right of it's parent container.</td>
                </tr>
                <tr>
                    <td>clientId</td>
                    <td><code>string</code></td>
                    <td><code>null</code></td>
                    <td>Sets the <code>id</code> property of the rendered html element.</td>
                </tr>
            </tbody>
        </table>
    }
</div>

