@using Ux.Mvc.Web.UI
@helper isActive(string action, string controller)
{
    if (Url.Action(action, controller) == Request.Url.LocalPath)
    {
    @:class="active"   
    }    
}
@helper navItem(string text, string action, string controller, IconType? icon = null)
{
    <li @isActive(action, controller)>

        <a href="@Url.Action(action, controller)">@if (icon.HasValue)
                                                  {
            @Html.UxIcon(icon.Value)   
                                                  } @text</a></li>
}
@helper helperItem(string text, string nameOfPartial, bool isNew = false)
{
    
    <li><a href="@Url.Action("HtmlHelpers", "UxDocumentation", new { partial = nameOfPartial }, null)">@text @if (isNew)
                                                                                                            {
        @Html.UxLabel("New", appearance: AppearanceType.Danger)
                                                                                                            }
    </a></li>
}
@helper sampleItem(string text, string nameOfPartial, bool isNew = false)
{
    
    <li><a href="@Url.Action("Samples", "UxDocumentation", new { partial = nameOfPartial }, null)">@text @if (isNew)
                                                                                                        {
        @Html.UxLabel("New", appearance: AppearanceType.Danger)
                                                                                                        }
    </a></li>
}

@helper dataItem(string text, string nameOfPartial, bool isNew = false)
