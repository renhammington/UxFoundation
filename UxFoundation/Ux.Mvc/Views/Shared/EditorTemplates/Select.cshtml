@using Ux.Mvc.Web.UI
@model string
@{
    DataSource DataSource = null;
    if (ViewBag.DataSource != null) { DataSource = ViewBag.DataSource; }

    var htmlField = ViewData.TemplateInfo.HtmlFieldPrefix;
    ViewData["selectionMade"] = false;
        
}

@if (DataSource == null)
{
    @Html.UxLabel("No datasource has been supplied", LabelAppearanceType.Danger);
}
else
{ 
    @Html.UxSelectWithDataSource(DataSource, Model, clientId: htmlField)
}

