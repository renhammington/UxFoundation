@using Ux.Mvc.Web.UI
<div class="page-header">
	<h1>Bullet lists <small>UxBulletList + UxBulletListItem</small></h1>
</div>
<h3>Helper</h3>
<div class="highlight highlight-large">
	<pre class="prettyprint">
// Bullet list
@@using (Html.UxBulletList()) 
{ 
	// Bullet list item
	@@Html.UxBulletListItem()
}
</pre>
</div>
<h3>UxBulletList Helper options</h3>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Type</th>
			<th>Default</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>useCustomIcons</td>
			<td><code>bool</code></td>
			<td><code>false</code></td>
			<td>Set to <code>true</code> to use icons for bullets.</td>
		</tr>
		<tr>
			<td>columnCount</td>
			<td><code>int</code></td>
			<td><code>1</code></td>
			<td>Sets the number of columns for the list. Maximum <code>6</code>.</td>
		</tr>
		<tr>
			<td>clientId</td>
			<td><code>string</code></td>
			<td><code>null</code></td>
			<td>Sets the <code>id</code> property of the rendered html element.</td>
		</tr>
	</tbody>
</table>

<h3>UxBulletListItem Helper options</h3>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Type</th>
			<th>Default</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>text</td>
			<td><code>string</code></td>
			<td><code>null</code></td>
			<td>Sets the text of the bullet list item.</td>
		</tr>
		<tr>
			<td>iconType</td>
			<td><code>IconType</code></td>
			<td><code>null</code></td>
			<td>Sets the icon for the bullet list item. Note, the parent <code>UxBulletList</code> must have the <code>useCustomIcons</code> property set to <code>true</code> for this to be effective.</td>
		</tr>
		<tr>
			<td>clientId</td>
			<td><code>string</code></td>
			<td><code>null</code></td>
			<td>Sets the <code>id</code> property of the rendered html element.</td>
		</tr>
	</tbody>
</table>

